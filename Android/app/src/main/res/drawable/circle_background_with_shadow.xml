<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
            <solid android:color="#33000000" /> <!-- 33 is the opacity (20%) -->
            <size
                android:width="120dp"
                android:height="120dp" />
        </shape>
    </item>
    <!-- Background Layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Background color of the circle -->
        </shape>
    </item>
    <!-- Border Layer -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="#CCCCCC" /> <!-- Border color and width -->
        </shape>
    </item>
</layer-list>